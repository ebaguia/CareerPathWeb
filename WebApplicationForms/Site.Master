                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" runat="server" href="~/" data-toggle="tooltip" data-placement="bottom" title="Back to Homepage">
                        <img src="Images/UOA_SSS_LOGO_1008.jpg"/>
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a runat="server" href="~/Careers">Careers</a></li>
                        <li><a runat="server" href="~/Programmes">Programmes</a></li>
                        <li><a runat="server" href="~/Courses">Courses</a></li>
                        <li><a runat="server" href="~/Contact">Contact</a></li>
                    </ul>
